<div class="inner banner bg-background">
    <div class="banner-content">
        <div class="flex flex-col gap-4 sm:gap-6 text-center">
            <p class="banner-content-text font-medium uppercase">{{ content.subtitle }}</p>
            <h1 class="banner-content-title banner-content-text font-primary font-bold">
                {{ content.title }}
            </h1>
            <p class="banner-content-text font-light">{{ content.description }}</p>
        </div>
        <div class="banner-footer">
            <p class="banner-content-text font-primary font-bold">zum Artikel</p>
            <img
                class="banner-footer-image"
                src="/assets/images/qr-code.png"
                alt="zum Artikel"
                width="150"
                height="150"
            />
        </div>
    </div>
</div>
